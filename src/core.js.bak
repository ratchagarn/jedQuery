/**
 * Core
 * ------------------------------------------------------------
 */

(function() {

'use strict';

var root = this;


/**
 * jedQuery core function
 * ------------------------------------------------------------
 * @name jedQuery
 * @param {String} selector
 * @return {Object} jedQuery Object
 */

var jedQuery = function(selector) {
  return new jedQuery.fn.factory(selector);
};


/**
 * jedQuery factory for generate query object
 * ------------------------------------------------------------
 * @name jedQuery.factory
 * @param {String} selector
 * @return {Object} jedQuery Object
 */

jedQuery.fn = jedQuery.prototype = {

  version: '0.0.1',

  selector: '',

  factory: function(selector) {

    var obj = [];

    if (typeof selector === 'string') {
      var selector_type = selector[0];

      // by id
      if (selector_type === '#') {
        this.selector = document.getElementById( selector.slice(1, selector.length) );
      }

      // by clsss or tag name
      else if (selector_type === '.' || selector_type !== '.') {
        this.selector = document.querySelectorAll(selector);
      }

    }
    else if (typeof selector === 'object') {
      this.selector = selector;
    }
    else {
      throw new Error('Wrong selector');
    }


    if (typeof this.selector === 'object') {
      this.selector.forEach(function(item) {
        obj.push(item);
      });
    }

    return obj;

  }

};


/**
 * ------------------------------------------------------------
 * Define jedQuery to root scope
 * ------------------------------------------------------------
 */

root.jedQuery = jedQuery;

/**
 * ------------------------------------------------------------
 * Alias of jedQuery
 * ------------------------------------------------------------
 */

// root.$ = root.jedQuery;


}).call(this);